{
  "include": ["build.config.ts", "src"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", ".eslintrc.js"]
}
